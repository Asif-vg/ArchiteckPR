@model VmProject 
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item active">Project Detail</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Project Detail</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="property-detail-wrapper">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="">
                            <ul class="bxslider property-slider">
                                <li><img style="width:660px;" src="~/Uploads/@Model.Project.Image" alt="slide-image" /></li>
                            </ul>

                            
                        </div>
                        <!-- end slider -->

                        <div class="mt-4">

                            <p class="mt-3">
                                @Html.Raw(Model.Project.Text)
                            </p>


                         

                        </div>
                        <!-- end m-t-30 -->

                    </div>
                    <!-- end col -->

                    <div class="col-lg-4">
                        
                        <div class="card-box">
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0">
                                    <tbody>
                                        <tr>
                                            <th scope="row">Client:</th>
                                            <td>@Model.Project.Client</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Architeck: </th>
                                            <td><span class="label label-danger">@Model.Project.ProjectArchiteck.Name</span></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Our Role:</th>
                                            <td>@Model.Project.OurRole</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Contractor:</th>
                                            <td>@Model.Project.Contractor</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Created Date:</th>
                                            <td>@Model.Project.CreatedDate.ToString("MMM dd yyyy")</td>
                                        </tr>
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- end card-box -->
                        <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Close</a>
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end property-detail-wrapper -->

        </div>
        <!-- end container-fluid -->

    </div>
  
</div>

