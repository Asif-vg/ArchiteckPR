@model Client
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Client</a></li>
                                <li class="breadcrumb-item active">Add / Edit Client</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Client </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="Client" asp-action="Update" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mb-4">
                                    <label asp-for="@Model.ClientImageFile">Image</label>
                                    @foreach (var image in Model.ClientImages)
                                    {
                                        <img src="~/Uploads/@image.Image" alt="Alternate text" width="100" />

                                    }
                                    <input class="form-control " asp-for="@Model.ClientImageFile" />
                                    <span asp-validation-for="@Model.ClientImageFile" class="text-danger"></span>
                                </div>


                                <input type="hidden" asp-for="@Model.Id" />
                                <input type="hidden" asp-for="@Model.ClientImages" />


                                <button type="submit" class="btn btn-warning waves-effect waves-light mr-1">Update</button>
                                <button asp-area="Admin" asp-controller="Client" asp-action="Index" type="submit" style="margin-left:666px;" class="btn btn-secondary waves-effect waves-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

