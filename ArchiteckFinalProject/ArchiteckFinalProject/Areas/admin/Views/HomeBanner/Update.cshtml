@model HomeBanner
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Home Banner</a></li>
                                <li class="breadcrumb-item active">Add / Edit Home Banner</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Home Banner </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="HomeBanner" asp-action="Update" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mb-4">
                                    <label asp-for="@Model.BgImageFile">Image</label>
                                    <img src="~/Uploads/@Model.BgImage" alt="Alternate text" width="100" />
                                    <input class="form-control " asp-for="@Model.BgImageFile" />
                                    <span asp-validation-for="@Model.BgImageFile" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Title">Title</label>
                                    <input asp-for="@Model.Title" class="form-control">
                                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Suptitle">Suptitle</label>
                                    <input asp-for="@Model.Suptitle" class="form-control">
                                    <span asp-validation-for="@Model.Suptitle" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.Text" class="form-label">Text</label>
                                    <input class="form-control" asp-for="@Model.Text">
                                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                                </div>


                                <input type="hidden" asp-for="@Model.Id" />
                                <input type="hidden" asp-for="@Model.BgImage" />


                                <button type="submit" class="btn btn-warning waves-effect waves-light mr-1">Update</button>
                                <button asp-area="Admin" asp-controller="HomeBanner" asp-action="Index" type="submit" class="btn btn-primary waves-effect waves-light">Back to list</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

