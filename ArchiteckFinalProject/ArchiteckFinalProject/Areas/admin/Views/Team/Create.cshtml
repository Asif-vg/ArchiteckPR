<body>
    <!-- Modal -->
    <div id="custom-modal" class="modal-demo">
        <button type="button" class="close" onclick="Custombox.modal.close();">
            <span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="custom-modal-title">Create Person</h4>
        <div class="custom-modal-text text-left">

            <form asp-area="Admin" asp-controller="Team" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="@Model.ImageFile">Image</label>
                    <input class="form-control " asp-for="@Model.ImageFile" />
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="@Model.Name">Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="@Model.PersonPositionId">PersonPosition</label>
                    <select class="form-control mb-3" aria-label="Default select example" asp-for="@Model.PersonPositionId">
                        <option selected>Select category</option>
                        @foreach (var item in ViewBag.Position)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.PersonPositionId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="@Model.PersonToSocialsId">PersonSocial</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.PersonToSocialsId">
                        @foreach (var item in ViewBag.PersonSocial)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.PersonToSocialsId" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-success waves-effect waves-light mr-1" id="sweet-success">Create</button>
                <button asp-area="Admin" asp-controller="Team" asp-action="Index" type="submit" class="btn btn-primary waves-effect waves-light">Back to list</button>
            </form>


