@model List<Team>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Team </a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">Team</h4>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Team" asp-action="Create">Create</a>
            </div>

            <div class="col-lg-12">
                @if (HttpContextAccessor.HttpContext.Session.GetString("NullIdError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullIdError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullIdError");
                }

                @if (HttpContextAccessor.HttpContext.Session.GetString("NullDataError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullDataError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullDataError");
                }
            </div>
            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="table-responsive">
                            <table class="table table-centered m-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>PersonSocial</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        foreach (var team in Model)
                                        {
                                            i++;

                                                                        <tr>
                                                                            <td scope="row">@i</td>
                                                                            <td> <img class="rounded" alt="" src="~/Uploads/@team.Image" style="width: 100px; height: 66px;"> </td>
                                                                            <td>@team.Name</td>
                                                                            <td>@team.PersonPosition.Name</td>
                                                                            <td>
                                                                                @{
                                                                                    if (team.PersonToSocials.Count > 0)
                                                                                    {
                                                                                        foreach (var persontosocial in team.PersonToSocials)
                                                                                        {

                                                                                            if (persontosocial.PersonSocial != null)
                                                                                            {
                                                                                                <span>@persontosocial.PersonSocial.Name</span>
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                }


                                                                            </td>


                                                                            <td>
                                                                                <a asp-area="Admin" asp-controller="Team" asp-action="Update" asp-route-id="@team.Id" class="btn btn-success">Update</a>
                                                                                <a asp-area="Admin" asp-controller="Team" asp-action="Delete" asp-route-id="@team.Id" id="sweet-delete" class="btn btn-danger">Delete</a>

                                                                            </td>
                                                                        </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



