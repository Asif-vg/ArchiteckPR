@model List<ServiceCatagory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">ServiceCatagory </a></li>
                                <li class="breadcrumb-item active">Dashboard</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Service Category Dashboard</h4>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Category" asp-action="Create">Create</a>
            </div>
            

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">

                        <div class="table-responsive">
                            <table class="table table-centered m-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th>Name</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        foreach (var serviceCatagory in Model)
                                        {
                                            i++;

                                            <tr>
                                                <td scope="row">@i</td>

                                                <td>@serviceCatagory.Name</td>
                                                <td>
                                                    <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@serviceCatagory.Id" class="btn btn-warning">Update</a>
                                                    <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@serviceCatagory.Id" id="sweet-delete" class="btn btn-danger">Delete</a>

                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

