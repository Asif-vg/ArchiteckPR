@model List<Office>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Office </a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">Office</h4>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Office" asp-action="Create">Create</a>
            </div>

            <div class="col-lg-12">
                @if (HttpContextAccessor.HttpContext.Session.GetString("NullIdError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullIdError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullIdError");
                }

                @if (HttpContextAccessor.HttpContext.Session.GetString("NullDataError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullDataError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullDataError");
                }
            </div>
            <hr />


            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">


                        <div class="row justify-content-center mt-4 mb-3">
                            @{
                                int i = 0;
                                foreach (var office in Model)
                                {
                                    i++;
                                    <div class="col-md-10">

                                        <div class="row">


                                            <div class="col-sm-6" style="margin-bottom:30px;">
                                                <img class="rounded" alt="" src="~/Uploads/@office.Image" style="max-width:100%;">
                                                <!-- /form -->
                                            </div>


                                            <div class="col-sm-4 offset-sm-1">
                                                <div class="contact-box">

                                                    <div class="contact-detail mb-4">
                                                        <i class="mdi mdi-tooltip-account float-left font-20 mr-2"></i>
                                                        <address class="overflow-hidden">
                                                            @office.Address<br />
                                                            @office.Location
                                                        </address>
                                                    </div>

                                                    <div class="contact-detail mb-4">
                                                        <i class=" mdi mdi-cellphone-iphone float-left font-20 mr-2"></i>
                                                        <p class="">
                                                            @office.Phone1
                                                        </p>
                                                    </div>

                                                    <div class="contact-detail">
                                                        <i class="mdi mdi-email float-left font-20 mr-2"></i>
                                                        <p>
                                                            <a href="#">@office.Email1</a>
                                                        </p>
                                                    </div>

                                                </div>
                                                <a asp-area="Admin" asp-controller="Office" asp-action="Update" asp-route-id="@office.Id" class="btn btn-warning mx-2">Update</a>
                                                <a asp-area="Admin" asp-controller="Office" asp-action="Delete" asp-route-id="@office.Id" class="btn btn-danger">Delete</a>
                                            </div>



                                        </div>
                                    </div>

                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





