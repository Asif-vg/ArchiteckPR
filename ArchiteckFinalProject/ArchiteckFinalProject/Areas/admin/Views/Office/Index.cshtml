@model List<Office>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Office </a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">Office</h4>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Office" asp-action="Create">Create</a>
            </div>

            <div class="col-lg-12">
                @if (HttpContextAccessor.HttpContext.Session.GetString("NullIdError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullIdError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullIdError");
                }

                @if (HttpContextAccessor.HttpContext.Session.GetString("NullDataError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullDataError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullDataError");
                }
            </div>
            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="table-responsive">
                            <table class="table table-centered m-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th>Image</th>
                                        <th>Address</th>
                                        <th>Location</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                       
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        foreach (var office in Model)
                                        {
                                            i++;

                                                                        <tr>
                                                                            <td scope="row">@i</td>
                                                                            <td> <img class="rounded" alt="" src="~/Uploads/@office.Image" style="width: 100px; height: 66px;"> </td>
                                                                            <td>@office.Address</td>
                                                                            <td>@office.Location</td>
                                                                            <td style="padding:0;">@office.Phone1</td>
                                                                            <td>@office.Email1</td>
                                                                          

                                                                            <td class="d-flex ">
                                                                                <a asp-area="Admin" asp-controller="Office" asp-action="Update" asp-route-id="@office.Id" class="btn btn-warning mx-2">Update</a>
                                                                                <a asp-area="Admin" asp-controller="Office" asp-action="Delete" asp-route-id="@office.Id" id="sweet-delete" class="btn btn-danger">Delete</a>

                                                                            </td>
                                                                        </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



