@model Office
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Office</a></li>
                                <li class="breadcrumb-item active">Add / Edit Office</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Office </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="Office" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mb-4">
                                    <label asp-for="@Model.ImageFile">Image</label>
                                    <input class="form-control " asp-for="@Model.ImageFile" />
                                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Address">Address</label>
                                    <input asp-for="@Model.Address" class="form-control">
                                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Location">Location</label>
                                    <input asp-for="@Model.Location" class="form-control">
                                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.Phone1" class="form-label">Phone1</label>
                                    <input class="form-control" asp-for="@Model.Phone1">
                                    <span asp-validation-for="@Model.Phone1" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.Phone2" class="form-label">Phone2</label>
                                    <input class="form-control" asp-for="@Model.Phone2">
                                    <span asp-validation-for="@Model.Phone2" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Email1">Email1</label>
                                    <input asp-for="@Model.Email1" class="form-control">
                                    <span asp-validation-for="@Model.Email1" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.Email2" class="form-label">Email2</label>
                                    <input asp-for="@Model.Email2" class="form-control">
                                    <span asp-validation-for="@Model.Email2" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success waves-effect waves-light mr-1" id="sweet-success">Create</button>
                                <button asp-area="Admin" asp-controller="Office" asp-action="Index" type="submit" class="btn btn-primary waves-effect waves-light">Back to list</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

