@model CompanyIndicator
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Company Indicator</a></li>
                                <li class="breadcrumb-item active">Add / Edit Company Indicator</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Company Indicator </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="CompanyIndicator" asp-action="Create">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Title">Title</label>
                                    <input asp-for="@Model.Title" class="form-control" placeholder="Enter Title">
                                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.Count" class="form-label">Count</label>
                                    <input class="form-control" asp-for="@Model.Count">
                                    <span asp-validation-for="@Model.Count" class="text-danger"></span>
                                </div>


                                <button type="submit" class="btn btn-success waves-effect waves-light mr-1" id="sweet-success">Create</button>
                                <button asp-area="Admin" asp-controller="CompanyIndicator" asp-action="Index" type="submit" style="margin-left:670px;" class="btn btn-secondary waves-effect waves-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

