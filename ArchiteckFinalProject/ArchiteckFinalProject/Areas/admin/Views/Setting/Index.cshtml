@model Setting
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Setting </a></li>
                            </ol>
                        </div>
                        <h4 class="page-title">Setting</h4>
                    </div>
                </div>
            </div>

            @{
                if (ViewBag.Count < 1)
                {
                    <div class="col-lg-6">
                        <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Setting" asp-action="Create">Create</a>
                    </div>
                }
            }
            <hr />

            <div class="col-lg-12">
                @if (HttpContextAccessor.HttpContext.Session.GetString("NullIdError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullIdError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullIdError");
                }

                @if (HttpContextAccessor.HttpContext.Session.GetString("NullDataError") != null)
                {
                    <div class="alert alert-danger">
                        @HttpContextAccessor.HttpContext.Session.GetString("NullDataError")
                    </div>
                    HttpContextAccessor.HttpContext.Session.Remove("NullDataError");
                }
            </div>
            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="table-responsive">
                            <table class="table table-centered m-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th>Logo</th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>About</th>
                                        <th>Video</th>


                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                                                        <tr>
                                                                            <th scope="row">@i</th>
                                                                            <td style=" background-color:black;width: 100px; height: 66px;"><img src="~/Uploads/@Model.Logo" /></td>
                                                                            <td>@Model.Address</td>
                                                                            <td>@Model.Email</td>
                                                                            <td>@Model.Phone</td>
                                                                            <td>@Model.About</td>
                                                                            <td>@Model.VideoFile</td>
                                                                            <td>
                                                                                <a asp-area="Admin" asp-controller="Setting" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
                                                                                <a asp-area="Admin" asp-controller="Setting" asp-action="Delete" asp-route-id="@Model.Id" id="sweet-delete" class="btn btn-danger">Delete</a>

                                                                            </td>
                                                                        </tr>
                                        i++;
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



