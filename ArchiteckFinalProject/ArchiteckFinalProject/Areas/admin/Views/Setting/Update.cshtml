@model Setting
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Setting</a></li>
                                <li class="breadcrumb-item active">Add / Edit Setting</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Setting </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="Setting" asp-action="Update" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mb-4">
                                    <label asp-for="@Model.LogoFile">Logo</label>
                                    <input class="form-control " asp-for="@Model.LogoFile" />
                                    <span asp-validation-for="@Model.LogoFile" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Address">Address</label>
                                    <input asp-for="@Model.Address" class="form-control">
                                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.Email">Email</label>
                                    <input asp-for="@Model.Email" class="form-control">
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                                    <input class="form-control" asp-for="@Model.Phone">
                                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                </div>


                                <div class="form-group mb-4">
                                    <label asp-for="@Model.About">About</label>
                                    <input asp-for="@Model.About" class="form-control">
                                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.VideoFile" class="form-label">Video</label>
                                    <input asp-for="@Model.VideoFile" class="form-control">
                                    <span asp-validation-for="@Model.VideoFile" class="text-danger"></span>
                                </div>

                                <input type="hidden" asp-for="@Model.Id" />
                                <input type="hidden" asp-for="@Model.Logo" />
                                <input type="hidden" asp-for="@Model.Video" />



                                <button type="submit" class="btn btn-success waves-effect waves-light mr-1">Update</button>
                                <button asp-area="Admin" asp-controller="Setting" asp-action="Index" type="submit" class="btn btn-primary waves-effect waves-light">Back to list</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

