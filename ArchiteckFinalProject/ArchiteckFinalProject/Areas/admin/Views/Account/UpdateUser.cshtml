@model CustomUser
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Users</a></li>
                                <li class="breadcrumb-item active">Add / Edit Users</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Users </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="Account" asp-action="UpdateUser" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group mb-4">
                                    <label asp-for="@Model.FullName">FullName</label>
                                    <input asp-for="@Model.FullName" class="form-control">
                                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">

                                    @*<label>Roles</label>
                                    <select class="form-control" asp-for="Roles">
                                        @foreach (var role in Model.Roles)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>*@

                                    <label asp-for="@Model.RoleId" class="form-label">Roll Name</label>
                                    <select class="form-control" aria-label="Default select example" asp-for="@Model.RoleId" )">
                                        @foreach (var item in ViewBag.Roles)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }

                                    </select>
                                    <span asp-validation-for="@Model.RoleId"></span>

                                </div>
                   
                                <input asp-for="Id" hidden />



                                <button type="submit" class="btn btn-warning waves-effect waves-light mr-1">Update</button>
                                <button asp-area="Admin" asp-controller="Account" asp-action="Users" type="submit" style="margin-left:666px;" class="btn btn-secondary waves-effect waves-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

