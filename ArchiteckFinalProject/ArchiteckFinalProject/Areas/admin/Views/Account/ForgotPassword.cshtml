@model CustomUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">


<!-- Mirrored from coderthemes.com/zircos/layouts/vertical/page-register.html by HTTrack Website Copier/3.x [XR&CO'2014], Sun, 06 Feb 2022 13:05:41 GMT -->
<head>
    <meta charset="utf-8" />
    <title>Register | Zircos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Responsive bootstrap 4 admin template" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Areas/assets/images/favicon.ico">
    <link href="~/Areas/assets/libs/dropify/dropify.min.css" rel="stylesheet" type="text/css" />


    <!-- App css -->
    <link href="~/Areas/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet" />
    <link href="~/Areas/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-stylesheet" />

</head>

<body>

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">

                        <div class="text-center account-logo-box">
                            <div class="mt-2 mb-2">
                                <a href="#" class="text-success">
                                    <span><img src="~/img/Home-img/logo-white.png" alt="" height="36"></span>
                                </a>
                            </div>
                        </div>
                      
                       
                            <div class="card-body">

                                <form asp-area="Admin" asp-controller="Account" asp-action="ForgotPassword" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input class="form-control" type="email" asp-for="@Model.Email" required placeholder="Email">
                                    </div>


                                    <div class="form-group account-btn text-center mt-2">
                                        <div class="col-12">
                                            <button class="btn width-md btn-bordered btn-danger waves-effect waves-light" type="submit">Change</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Vendor js -->
    <script src="~/Areas/assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/Areas/assets/js/app.min.js"></script>
    <script src="~/Areas/assets/libs/dropify/dropify.min.js"></script>

</body>


