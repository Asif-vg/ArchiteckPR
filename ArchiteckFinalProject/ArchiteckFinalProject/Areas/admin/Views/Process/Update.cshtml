@model Process
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Proecess</a></li>
                                <li class="breadcrumb-item active">Add / Edit Process</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Add / Edit Process </h4>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card-box">
                        <div class="">
                            <form asp-area="Admin" asp-controller="Process" asp-action="Update" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mb-4">
                                    <label asp-for="@Model.ImageFile">Image</label>
                                    <img src="~/Uploads/@Model.Image" alt="Alternate text" width="100" />
                                    <input class="form-control " asp-for="@Model.ImageFile" />
                                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                                </div>


                                <div class="mb-3">
                                    <label asp-for="@Model.Icon" class="form-label">Icon</label>
                                    <input class="form-control" asp-for="@Model.Icon">
                                    <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                                </div>


                                <div class="form-group mb-4">
                                    <label asp-for="@Model.ProcessHead">ProcessHead</label>
                                    <input asp-for="@Model.ProcessHead" class="form-control" placeholder="Enter ProcessHead">
                                    <span asp-validation-for="@Model.ProcessHead" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="@Model.ProcessText" class="form-label">ProcessText</label>
                                    <textarea class="form-control" asp-for="@Model.ProcessText" rows="3"></textarea>
                                    <span asp-validation-for="@Model.ProcessText" class="text-danger"></span>
                                </div>

                                <input type="hidden" asp-for="@Model.Id" />
                                <input type="hidden" asp-for="@Model.Image" />


                                <button type="submit" class="btn btn-warning waves-effect waves-light mr-1">Update</button>
                                <button asp-area="Admin" asp-controller="Process" asp-action="Index" type="submit" class="btn btn-secondary waves-effect waves-light" >Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

