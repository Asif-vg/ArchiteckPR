@model VmContact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_BannerPartial" model="@Model.Banner" />

    <section class="contact">
        <div class="container">
            <div class="row">
                @foreach (var office in Model.Offices)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="contact-box">
                            <div class="contact-img">
                                <img class="img-fluid" src="~/Uploads/@office.Image" alt="">
                            </div>
                            <div class="contact-content">
                                <h4>@office.Location</h4>
                                <ul>
                                    <li><i class="fas fa-map-marker-alt"></i><span>@office.Address</span></li>
                                    <li>
                                        <i class="fas fa-phone"></i><span>
                                            <a href="tel:+56712345678900">@office.Phone1</a>
                                            <a href="tel:+56712345678901">@office.Phone2</a>
                                        </span>
                                    </li>
                                    <li>
                                        <i class="fas fa-envelope"></i><span>
                                            <a href="mailto:info@peacefulthemes.com">@office.Email1</a>
                                            <a href="mailto:infoo@peacefulthemes.com">@office.Email2</a>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>
    <section class="message">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="message-box p-4 p-md-5">
                        <div class="contact-opacity"></div>
                        <div class="message-head">
                            <span>Get Quote</span>
                            <h2>Request A Quote</h2>
                        </div>
                        <div class="message-question">
                            <form id="sendMessage">
                                
                                <div class="row">
                                    <div class="col-lg-6">
                                        <input id="name11" class="put" type="text" placeholder="Enter name">
                                    </div>
                                    <div class="col-lg-6">
                                        <input id="email11" class="put" type="email" placeholder="Enter email">
                                    </div>
                                    <div class="col-lg-12">
                                        <input id="subject11" class="put" type="text" placeholder="Enter subject">
                                    </div>
                                    <div class="col-lg-12">
                                        <textarea id="message11" rows="6" class="area" placeholder="Enter your message"></textarea>

                                    </div>
                                    <div class="col-lg-12">
                                        <div class="message-button">
                                            <div class="alert alert-success" style="display: none; position: absolute; top: 53px; width: 100%;"></div>
                                            <div class="alert alert-warning" style="display: none; position: absolute; top: 53px; width: 100%;"></div>
                                            <button type="submit" id="messageSend"> Send Message </button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="mapouter">
                        <div class="mapouter">
                            <div class="gmap_canvas">
                                <iframe width="661" height="750" id="gmap_canvas" src="@Model.Setting.Map" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                                <a href="https://123movies-to.org">123movies</a><br>
                                <style>
                                    .mapouter {
                                        position: relative;
                                        text-align: right;
                                        height: 750px;
                                        width: 661px;
                                    }
                                </style><a href="https://www.embedgooglemap.net">how to add google maps to website</a>
                                <style>
                                    .gmap_canvas {
                                        overflow: hidden;
                                        background: none !important;
                                        height: 750px;
                                        width: 661px;
                                    }
                                </style>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>


