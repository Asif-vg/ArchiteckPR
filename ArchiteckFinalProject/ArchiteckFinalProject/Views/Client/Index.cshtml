@model VmClient
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_BannerPartial" model="@Model.Banner" />

<section class="clients">
    <div class="container">
        <div class="row" data-aos="fade-up" data-aos-once="true" data-aos-duration="1000" data-aos-delay="0">
            <div class="client-box">
                <span>Best Service, Right Time, Right People</span>
                <h2>OUR CLIENTS</h2>
                <p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
            </div>
        </div>
        <div class="row" data-aos="fade-right" data-aos-once="true" data-aos-duration="1000" data-aos-delay="0">
            @foreach (var client in Model.Clients)
            {
                int c = 0;
                <div class="col-lg-3 col-md-4">
                    <div class="client-img">
                        @foreach (var image in client.ClientImages)
                        {
                            if (c == 1)
                            {
                                <img class="img-fluid" src="~/Uploads/@image.Image" alt="">

                            }
                            if (c == 0)
                            {
                                <img class="client-hover" src="~/Uploads/@image.Image" alt="">

                            }
                            c++;
                        }

                    </div>
                </div>
            }

   
        </div>
    </div>
</section>

